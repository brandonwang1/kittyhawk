{
  "name": "@pennlabs/kittyhawk",
  "version": "1.0.0",
  "author": "Penn Labs",
  "description": "Tool to generate Kubernetes YAML files from typescript code.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "license": "Apache-2.0",
  "homepage": "https://github.com/pennlabs/kittyhawk",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/pennlabs/kittyhawk.git"
  },
  "scripts": {
    "import": "npx cdk8s import",
    "gen": "npx cdk8s import k8s --language typescript --include io.k8s.api.autoscaling.v2beta2.HorizontalPodAutoscaler",
    "synth": "npm run build && npx cdk8s synth",
    "compile": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "docs": "npx typedoc --out docs lib && touch docs/.nojekyll",
    "build": "npm run compile && npm run test",
    "upgrade": "npm i cdk8s@latest cdk8s-cli@latest",
    "upgrade:next": "npm i cdk8s@next cdk8s-cli@next"
  },
  "files": [
    "lib/*",
    "imports/*",
    "test/*",
    "*.md",
    "cdk8s.yaml"
  ],
  "dependencies": {
    "cdk8s": "^0.33.0",
    "cdk8s-plus": "^0.33.0",
    "constructs": "^3.1.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.3",
    "cdk8s-cli": "^0.33.0",
    "jest": "^26.6.1",
    "ts-jest": "^26.4.2",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/imports/"
    ]
  }
}
