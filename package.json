{
  "name": "@pennlabs/kittyhawk",
  "version": "1.0.2",
  "author": "Penn Labs",
  "description": "Tool to generate Kubernetes YAML files from typescript code.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "license": "Apache-2.0",
  "homepage": "https://github.com/pennlabs/kittyhawk",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/pennlabs/kittyhawk.git"
  },
  "scripts": {
    "import": "yarn run cdk8s import",
    "gen": "yarn run cdk8s import k8s --language typescript --include io.k8s.api.autoscaling.v2beta2.HorizontalPodAutoscaler",
    "synth": "yarn run build && yarn run cdk8s synth",
    "compile": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "eslint": "eslint . --ext .ts",
    "docs": "rm -rf docs/ && yarn run typedoc lib --out docs --theme minimal && touch docs/.nojekyll",
    "build": "yarn run eslint && yarn run compile && yarn run test",
    "upgrade": "yarn add cdk8s@latest && yarn add cdk8s-cli@latest -D"
  },
  "files": [
    "lib/*",
    "imports/*",
    "test/*",
    "*.md"
  ],
  "dependencies": {
    "cdk8s": "^0.33.0",
    "cdk8s-plus": "^0.33.0",
    "constructs": "^3.1.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.3",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "cdk8s-cli": "^0.33.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.1",
    "ts-jest": "^26.4.2",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/imports/"
    ]
  }
}
